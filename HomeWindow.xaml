<Window x:Class="ManGo.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ManGo" 
        xmlns:localSP="clr-namespace:ManGo.Presentation"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <localSP:MySPUserControl/>

        <!-- Первый блок -->
        <Label Content="Обновления популярной манги" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="1" />
        <ListView x:Name="LV_popular_manga" Grid.Row="2" Margin="20,20,24,20">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="14"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

    </Grid>
</Window>
